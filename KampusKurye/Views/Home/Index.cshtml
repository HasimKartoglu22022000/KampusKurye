@{
    ViewData["Title"] = "Home Page";
}

<section class="mt-3 mb-5">
    @await Component.InvokeAsync("_SalesPromotionPartial")
</section>
<section class="container my-5">
    <div class="row g-4">
        <!-- Card 1 -->
        <div class="col-12 col-sm-6 col-md-4 col-lg-3">
            <div class="card h-100 border-0 shadow-sm overflow-hidden cursor-pointer">
                <div class="position-relative">
                    <img src="~/images/burger-lab.jpg" class="card-img-top" alt="Burger Lab">
                    <div class="position-absolute top-2 end-2 bg-white bg-opacity-75 rounded px-2 py-1 d-flex align-items-center">
                        <i class="ri-star-fill text-warning me-1 small"></i>
                        <span class="small fw-medium">4.8</span>
                    </div>
                </div>
                <div class="card-body p-3">
                    <h5 class="card-title mb-1">Burger Lab</h5>
                    <p class="card-text text-muted mb-2">Burger • 15-20 dk</p>
                    <div class="d-flex justify-content-between">
                        <span class="text-muted small">Min. 45 ₺</span>
                        <span class="text-success small fw-medium">Ücretsiz Teslimat</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Card 2 -->
        <div class="col-12 col-sm-6 col-md-4 col-lg-3">
            <div class="card h-100 border-0 shadow-sm overflow-hidden cursor-pointer">
                <div class="position-relative">
                    <img src="https://readdy.ai/api/search-image?query=mediterranean" class="card-img-top" alt="Akdeniz Sofrası">
                    <div class="position-absolute top-2 end-2 bg-white bg-opacity-75 rounded px-2 py-1 d-flex align-items-center">
                        <i class="ri-star-fill text-warning me-1 small"></i>
                        <span class="small fw-medium">4.6</span>
                    </div>
                </div>
                <div class="card-body p-3">
                    <h5 class="card-title mb-1">Akdeniz Sofrası</h5>
                    <p class="card-text text-muted mb-2">Akdeniz Mutfağı • 20-30 dk</p>
                    <div class="d-flex justify-content-between">
                        <span class="text-muted small">Min. 50 ₺</span>
                        <span class="text-success small fw-medium">Ücretsiz Teslimat</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Card 3 -->
        <div class="col-12 col-sm-6 col-md-4 col-lg-3">
            <div class="card h-100 border-0 shadow-sm overflow-hidden cursor-pointer">
                <div class="position-relative">
                    <img src="https://readdy.ai/api/search-image?query=sushi" class="card-img-top" alt="Sushi Master">
                    <div class="position-absolute top-2 end-2 bg-white bg-opacity-75 rounded px-2 py-1 d-flex align-items-center">
                        <i class="ri-star-fill text-warning me-1 small"></i>
                        <span class="small fw-medium">4.9</span>
                    </div>
                </div>
                <div class="card-body p-3">
                    <h5 class="card-title mb-1">Sushi Master</h5>
                    <p class="card-text text-muted mb-2">Japon Mutfağı • 25-35 dk</p>
                    <div class="d-flex justify-content-between">
                        <span class="text-muted small">Min. 60 ₺</span>
                        <span class="text-success small fw-medium">Ücretsiz Teslimat</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Card 4 -->
        <div class="col-12 col-sm-6 col-md-4 col-lg-3">
            <div class="card h-100 border-0 shadow-sm overflow-hidden cursor-pointer">
                <div class="position-relative">
                    <img src="https://readdy.ai/api/search-image?query=mexican" class="card-img-top" alt="Taco Loco">
                    <div class="position-absolute top-2 end-2 bg-white bg-opacity-75 rounded px-2 py-1 d-flex align-items-center">
                        <i class="ri-star-fill text-warning me-1 small"></i>
                        <span class="small fw-medium">4.7</span>
                    </div>
                </div>
                <div class="card-body p-3">
                    <h5 class="card-title mb-1">Taco Loco</h5>
                    <p class="card-text text-muted mb-2">Meksika Mutfağı • 20-30 dk</p>
                    <div class="d-flex justify-content-between">
                        <span class="text-muted small">Min. 45 ₺</span>
                        <span class="text-success small fw-medium">Ücretsiz Teslimat</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


