@model IEnumerable<KampusKurye.Models.RestaurantModel>

@{
    ViewData["Title"] = "Home Page";
}

<section class="mt-3 mb-5">
    @await Component.InvokeAsync("_SalesPromotionPartial")
</section>

<section class="container my-5">
    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info">Henüz restoran bulunamadı.</div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var restaurant in Model)
            {
                <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                    <a asp-controller="Restaurants" asp-action="Index" asp-route-id="@restaurant.restaurant_id" class="text-decoration-none text-dark">
                        <div class="card h-100 border-0 shadow-sm overflow-hidden">
                            <div class="position-relative">
                                <img src="@(string.IsNullOrWhiteSpace(restaurant.restaurant_img_url) ? Url.Content("~/images/placeholder.png") : restaurant.restaurant_img_url)"
                                     class="card-img-top" alt="@restaurant.restaurant_name" loading="lazy" style="object-fit:cover; height:180px; width:100%;">
                                <div class="position-absolute top-2 end-2 bg-white bg-opacity-75 rounded px-2 py-1 d-flex align-items-center">
                                    <i class="ri-star-fill text-warning me-1 small"></i>
                                    <span class="small fw-medium">@restaurant.restaurant_point.ToString("0.0")</span>
                                </div>
                            </div>
                            <div class="card-body p-3">
                                <h5 class="card-title mb-1">@restaurant.restaurant_name</h5>
                                <p class="card-text text-muted small mb-2">@restaurant.restaurant_description</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <span class="text-muted small">@restaurant.restaurant_working_hours</span>
                                    <span class="text-success small fw-medium">Min. @string.Format("{0:0}", restaurant.restaurant_point * 10) ₺</span>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            }
        </div>
    }
</section>