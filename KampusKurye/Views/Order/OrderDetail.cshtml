
@{
    ViewData["Title"] = "OrderDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-4">
    <div class="card border-0 shadow-sm rounded-4 mx-auto" style="max-width: 420px;">

        <!-- Header -->
        <div class="card-header bg-white border-0 d-flex align-items-center justify-content-between py-3">
            <a href="#" class="btn btn-light btn-sm rounded-circle">
                <i class="ri-arrow-left-line fs-5 text-dark"></i>
            </a>
            <h5 class="mb-0 fw-semibold">Sipariş Takibi</h5>
            <span style="width:32px;"></span>
        </div>

        <!-- Order Status -->
        <div class="card-body pt-4">
            <div class="position-relative mb-5">
                <!-- Progress Line -->
                <div class="position-absolute top-50 start-0 end-0 translate-middle-y bg-light" style="height:2px;"></div>
                <div class="position-absolute top-50 start-0 bg-primary translate-middle-y" style="height:2px; width:33%;"></div>

                <!-- Steps -->
                <div class="d-flex justify-content-between position-relative text-center">
                    <!-- Step 1 -->
                    <div class="d-flex flex-column align-items-center">
                        <div class="rounded-circle bg-primary text-white d-flex align-items-center justify-content-center mb-2" style="width:60px;height:60px;">
                            <i class="ri-restaurant-line fs-4"></i>
                        </div>
                        <div>
                            <p class="mb-1 small fw-semibold text-primary">Sipariş Hazırlanıyor</p>
                            <p class="text-muted small mb-0">14:25</p>
                        </div>
                    </div>
                    <!-- Step 2 -->
                    <div class="d-flex flex-column align-items-center">
                        <div class="rounded-circle bg-light text-secondary d-flex align-items-center justify-content-center mb-2" style="width:60px;height:60px;">
                            <i class="ri-truck-line fs-4"></i>
                        </div>
                        <div>
                            <p class="mb-1 small fw-semibold text-secondary">Yolda</p>
                            <p class="text-muted small mb-0">~15:10</p>
                        </div>
                    </div>
                    <!-- Step 3 -->
                    <div class="d-flex flex-column align-items-center">
                        <div class="rounded-circle bg-light text-secondary d-flex align-items-center justify-content-center mb-2" style="width:60px;height:60px;">
                            <i class="ri-check-line fs-4"></i>
                        </div>
                        <div>
                            <p class="mb-1 small fw-semibold text-secondary">Teslim Alındı</p>
                            <p class="text-muted small mb-0">~15:30</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Order Summary -->
            <div class="bg-light rounded-3 p-3 mb-3">
                <h6 class="fw-semibold mb-3">Sipariş Özeti</h6>
                <div class="d-flex justify-content-between small mb-2">
                    <span class="text-muted">Sipariş No:</span>
                    <span class="fw-semibold">#SP-2025-001234</span>
                </div>
                <div class="d-flex justify-content-between small mb-2">
                    <span class="text-muted">Sipariş Tarihi:</span>
                    <span class="fw-semibold">8 Ocak 2025, 14:15</span>
                </div>
                <div class="d-flex justify-content-between small">
                    <span class="text-muted">Toplam Tutar:</span>
                    <span class="fw-bold text-dark">₺89,50</span>
                </div>
            </div>

            <!-- Delivery Info -->
            <div class="bg-light rounded-3 p-3 mb-3">
                <h6 class="fw-semibold mb-3">Teslimat Bilgisi</h6>
                <div class="d-flex align-items-start mb-3">
                    <i class="ri-map-pin-line text-secondary fs-6 me-2 mt-1"></i>
                    <div>
                        <p class="small fw-semibold mb-1">Teslimat Adresi</p>
                        <p class="small mb-0 text-muted">
                            Atatürk Mah. Cumhuriyet Cad. No:45/A<br>Kadıköy, İstanbul
                        </p>
                    </div>
                </div>
                <div class="d-flex align-items-start">
                    <i class="ri-time-line text-secondary fs-6 me-2 mt-1"></i>
                    <div>
                        <p class="small fw-semibold mb-1">Tahmini Teslimat</p>
                        <p class="small text-primary fw-semibold mb-0">25-35 dakika içinde</p>
                    </div>
                </div>
            </div>

            <!-- Buttons -->
            <div class="d-grid gap-2">
                <button class="btn btn-primary py-3 fw-semibold">
                    <i class="ri-customer-service-2-line me-1"></i> Destek ile İletişime Geç
                </button>
                <button class="btn btn-light py-3 fw-semibold border">
                    <i class="ri-file-list-line me-1"></i> Sipariş Detaylarını Görüntüle
                </button>
            </div>
        </div>
    </div>
</div>


